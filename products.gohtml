</thead>

<tbody id="myTable">
{{range .}}
<tr>
  {{ if .Enable }}
<td><a class="action" href="/product/{{.PartNo}}">{{.PartNo}}</a></td>
<!-- <td>{{.Name}}</td> -->
<td>${{.Price}}</td>
<td>{{.Description1}}</td>
<!-- <td>{{.Category}}</td> -->
<td>{{ if le .Qty 0 }}
    <span>Out of stock</span>
{{ else }}
  <button
    class="snipcart-add-item"
    data-item-id="{{ .PartNo }}"
    data-item-name="{{.Name}}"
    data-item-price="{{.Price}}"
    data-item-image=""
    data-item-url="/product/{{ .PartNo }}"
    data-item-max-quantity="100"
    data-item-description="{{.Description1}}">
    Add to cart
  </button>
{{end}}</td>
</tr>
{{end}}
{{end}}

</tbody>

</table>

